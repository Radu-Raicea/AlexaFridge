<div class="content">
  <h1><%= @recipe.name.capitalize %></h1>

  <p>
    <strong>Ingredients</strong>
    <% @recipe.ingredients.each do |ingredient| %>
      <br><%= ingredient.name.capitalize %>
    <% end %>
  </p>

  <%= link_to 'Edit', edit_recipe_path(@recipe) %> |
  <%= link_to 'Back', recipes_path %>
</div>